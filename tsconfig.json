{
    "compilerOptions": {
      "module": "node16",
      "target": "esnext",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true,
      "moduleResolution": "node16"
    },

    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}
