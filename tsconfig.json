{
    "compilerOptions": {
      "module": "node16",
      "target": "esnext",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true,
      "moduleResolution": "node16",
      "baseUrl": "./dist",

      "paths": {
        "./types/esm": ["types/esm/index.d.ts"],
        "./types/commonjs": ["types/commonjs/index.d.ts"],
        "./esm": ["esm/index.js"],
        "./commonjs": ["commonjs/index.cjs"]
      }
    },

    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}
